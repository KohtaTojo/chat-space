.message
  .top-content
    .top-content__name
      = message.user.name
    .top-content__date
      = message.created_at
  .bottom-content
    - if message.content.present?
      %p.bottom-content__text
        = message.content
    = image_tag message.image.url, class: 'bottom-content__image' if message.image.present?
